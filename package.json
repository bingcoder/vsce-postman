{
  "name": "vsc-postman",
  "displayName": "vsc-postman",
  "description": "vscode postman extension",
  "license": "MIT",
  "version": "2.0.0",
  "icon": "media/icon.png",
  "keywords": [
    "postman"
  ],
  "publisher": "breaking-point",
  "engines": {
    "vscode": "^1.55.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breaking-point/vsce-postman"
  },
  "bugs": {
    "url": "https://github.com/breaking-point/vsce-postman/issues"
  },
  "homepage": "https://github.com/breaking-point/vsce-postman",
  "galleryBanner": {
    "color": "#0273D4",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vsc-postman-side"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscPostman.reveal",
        "title": "Reveal"
      },
      {
        "command": "vscPostman.changeTitle",
        "title": "Change Title"
      },
      {
        "command": "vscPostman.openFile",
        "title": "OpenFile"
      },
      {
        "command": "vscPostman.refresh",
        "title": "%ext.command.refresh%",
        "icon": "$(refresh)"
      },
      {
        "command": "vscPostman.add",
        "title": "%ext.command.add%",
        "icon": "$(file-add)"
      },
      {
        "command": "vscPostman.addFromTitle",
        "title": "%ext.command.add%",
        "icon": "$(file-add)"
      },
      {
        "command": "vscPostman.addFolder",
        "title": "%ext.command.addFolder%",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "vscPostman.addFolderFromTitle",
        "title": "%ext.command.addFolder%",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "vscPostman.delete",
        "title": "%ext.command.delete%",
        "icon": "$(trash)"
      },
      {
        "command": "vscPostman.rename",
        "title": "%ext.command.rename%",
        "icon": "$(edit)"
      },
      {
        "command": "vscPostman.showHistory",
        "title": "%ext.command.showHistory%",
        "icon": "$(history)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscPostman.addFromTitle",
          "when": "view == vsc-postman-side",
          "group": "navigation"
        },
        {
          "command": "vscPostman.addFolderFromTitle",
          "when": "view == vsc-postman-side",
          "group": "navigation"
        },
        {
          "command": "vscPostman.refresh",
          "when": "view == vsc-postman-side",
          "group": "navigation"
        },
        {
          "command": "vscPostman.showHistory",
          "when": "view == vsc-postman-side",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscPostman.add",
          "when": "view == vsc-postman-side && viewItem != file"
        },
        {
          "command": "vscPostman.rename",
          "when": "view == vsc-postman-side"
        },
        {
          "command": "vscPostman.delete",
          "when": "view == vsc-postman-side"
        }
      ]
    },
    "views": {
      "vsc-postman": [
        {
          "id": "vsc-postman-side",
          "name": ""
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "media/rocket.svg",
          "id": "vsc-postman",
          "title": "Postman"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "nanoid": "^4.0.0"
  }
}
